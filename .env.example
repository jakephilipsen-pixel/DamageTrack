# ============================================================
# DamageTrack — Production Environment Variables
# Copy this file to .env and fill in all required values.
# Generate secrets with: openssl rand -base64 48
# NEVER commit .env to version control.
# ============================================================

# ------------------------------------------------------------------
# Database (required)
# ------------------------------------------------------------------
POSTGRES_USER=damagetrack
POSTGRES_DB=damagetrack
DB_PASSWORD=change_me_use_strong_password

# ------------------------------------------------------------------
# JWT Secrets (required — must be different values)
# ------------------------------------------------------------------
JWT_SECRET=change_me_generate_with_openssl_rand_base64_48
JWT_REFRESH_SECRET=change_me_generate_with_openssl_rand_base64_48_different_value

# ------------------------------------------------------------------
# Application (required)
# ------------------------------------------------------------------
APP_URL=https://damage.yourcompany.com
NODE_ENV=production

# ------------------------------------------------------------------
# SMTP Email (optional — status change notifications)
# Leave blank to disable email features silently.
# ------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourcompany.com

# ------------------------------------------------------------------
# File uploads (optional — defaults shown)
# ------------------------------------------------------------------
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
